{
  "name": "hola-server",
  "version": "3.0.0",
  "type": "module",
  "description": "a meta programming framework used to build nodejs restful api",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "bun run src/index.ts",
    "test": "bun test --timeout 10000",
    "test:mocha": "bun run build && bun --bun mocha --timeout 10000 --recursive 'test/*/*.ts' --exit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "axios": "^1.7.0",
    "body-parser": "^1.20.0",
    "connect-mongo": "^5.1.0",
    "cors": "^2.8.5",
    "dateformat": "^5.0.3",
    "express": "^4.21.0",
    "express-sanitizer": "^1.0.6",
    "express-session": "^1.18.0",
    "mongodb": "^6.12.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "unzipper": "^0.12.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/express-session": "^1.18.0",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.0.0",
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "mocha": "^10.1.0",
    "tsx": "^4.21.0",
    "typescript": "^5.7.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hery-node/hola-server.git"
  },
  "keywords": [
    "meta",
    "nodejs",
    "express",
    "mongodb",
    "typescript"
  ],
  "author": "hery1979 <hery1979@qq.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/hery-node/hola-server/issues"
  },
  "homepage": "https://github.com/hery-node/hola-server#readme"
}